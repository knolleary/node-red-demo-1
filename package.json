{
    "name": "node-red-demo-1",
    "description": "A Node-RED Project",
    "version": "0.0.1",
    "dependencies": {
        "node-red": "0.18.*"
    },
    "scripts": {
        "start": "node --max-old-space-size=384 ./node_modules/node-red/red.js --settings ./settings.js flow.json"
    },
    "engines": {
        "node": "8.x"
    },
    "node-red": {
        "settings": {
            "flowFile": "flow.json",
            "credentialsFile": "flow_cred.json"
        }
    }
}
